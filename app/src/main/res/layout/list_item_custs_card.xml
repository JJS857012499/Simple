<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/list_item_custs_card"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@android:color/white"
    app:cardElevation="4dp"
    app:contentPadding="5dp"
    app:cardMaxElevation="8dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/list_item_name"
            style="@style/text_gray_bg_normal"
            android:layout_width="match_parent"
            android:text="购买产品1"/>
        <TextView
            android:id="@+id/list_item_time"
            style="@style/text_gray_bg_normal"
            android:layout_width="match_parent"
            android:text="购买产品1时间"/>

        <TextView
            android:id="@+id/list_item_place"
            style="@style/text_gray_bg_normal"
            android:layout_width="match_parent"
            android:text="购买产品1地点"/>

        <TextView
            android:id="@+id/list_item_price"
            style="@style/text_gray_bg_normal"
            android:layout_width="match_parent"
            android:text="购买产品1价格"/>

    </LinearLayout>

</android.support.v7.widget.CardView>