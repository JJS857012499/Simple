<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    style="@style/text_gray_normal"
                    android:textSize="@dimen/big_small_text"
                    android:text="今日价格："/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    style="@style/text_gray_normal"
                    android:layout_width="wrap_content"
                    android:layout_marginRight="0dp"
                    android:text="黄金"/>
                <TextView
                    android:id="@+id/home_price1"
                    style="@style/text_gray_normal"
                    android:layout_width="wrap_content"
                    android:text="244"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    style="@style/text_gray_normal"
                    android:layout_width="wrap_content"
                    android:layout_marginRight="0dp"
                    android:text="铂金"/>
                <TextView
                    android:id="@+id/home_price2"
                    style="@style/text_gray_normal"
                    android:layout_width="wrap_content"
                    android:text="244"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    style="@style/text_gray_normal"
                    android:layout_width="wrap_content"
                    android:layout_marginRight="0dp"
                    android:text="白银"/>
                <TextView
                    android:id="@+id/home_price3"
                    style="@style/text_gray_normal"
                    android:layout_width="wrap_content"
                    android:text="244"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/home_order"
                    android:layout_width="46dp"
                    android:layout_height="match_parent"
                    android:layout_margin="12dp"
                    android:layout_weight="1"
                    android:background="@drawable/global_btn_blue_small_press"
                    android:text="销售开单"/>

                <Button
                    android:id="@+id/home_cust"
                    android:layout_width="46dp"
                    android:layout_height="match_parent"
                    android:layout_margin="12dp"
                    android:layout_weight="1"
                    android:background="@drawable/global_btn_blue_small_press"
                    android:text="客户资料"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/home_product"
                    android:layout_width="46dp"
                    android:layout_height="match_parent"
                    android:layout_margin="12dp"
                    android:background="@drawable/global_btn_blue_small_press"
                    android:layout_weight="1"
                    android:text="产品查询"/>

                <Button
                    android:id="@+id/home_me"
                    android:layout_width="46dp"
                    android:layout_height="match_parent"
                    android:layout_margin="12dp"
                    android:layout_weight="1"
                    android:background="@drawable/global_btn_blue_small_press"
                    android:text="我的信息"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/home_notice_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"/>

    </LinearLayout>
</ScrollView>

