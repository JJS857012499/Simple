<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/list_item_videos_card"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@android:color/white"
    app:cardElevation="4dp"
    app:contentPadding="5dp"
    app:cardMaxElevation="8dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/text_gray_normal"
            android:layout_width="match_parent"
            android:text="产品名称"/>
        <TextView
            style="@style/text_gray_normal"
            android:layout_width="match_parent"
            android:text="柜面价格"/>

        <LinearLayout
            android:id="@+id/list_item_products_params"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



        </LinearLayout>

    <ImageView
        android:id="@+id/list_item_products_pic"
        android:layout_width="match_parent"
        android:layout_height="245dp"
        android:scaleType="center"
        android:src="@drawable/ic_exception"/>

<!--        <Button
            android:id="@+id/list_item_orders_print"
            style="@style/btn_gray_normal"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:text="打印销售单" />-->
    </LinearLayout>

</android.support.v7.widget.CardView>